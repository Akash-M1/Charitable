<form action="/user/create-user" method="post" enctype="multipart/form-data">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" class="form-control">
    <label for="uname">UserName</label>
    <input type="text" name="username" id="username" class="form-control">
    <label for="email">Email</label>
    <input type="email" name="email" id="email" class="form-control">
    <label for="phone">Phone</label>
    <input type="text" name="phone" id="phone" class="form-control">
    <label for="password" class="form-label">Password</label>
    <input type="password" name="password" id="password" class="form-control" aria-labelledby="passwordHelpBlock">
    <div id="passwordHelpBlock" class="form-text">
        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
    </div>
    <label for="cpassword" class="form-label">Password</label>
    <input type="password" name="cpassword" id="cpassword" class="form-control" aria-labelledby="cpasswordHelpBlock">
    <div id="cpasswordHelpBlock" class="form-text">
        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
    </div>
    <label for="avatar">Photo</label>
    <input type="file" name="avatar" id="avatar" class="form-control">

    <button class="btn btn-primary" type="submit">Submit</button>
</form>